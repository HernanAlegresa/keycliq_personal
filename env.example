# ========================================
# APP CONFIGURATION
# ========================================
NODE_ENV=development
SESSION_SECRET=your-super-secret-session-key-here

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For local development (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/keycliq_dev"

# For production (Heroku Postgres)
# DATABASE_URL="postgresql://user:pass@host:5432/database_name"

# ========================================
# STORAGE CONFIGURATION
# ========================================
# For local development
STORAGE_PROVIDER=local

# For production (Cloudinary):
STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ========================================
# KEYSCAN V3 CONFIGURATION (Optional)
# ========================================
# If not set, uses calibrated defaults from progressive testing
# Only modify if you need to fine-tune based on real user data

# Thresholds (calibrated values - DO NOT CHANGE without testing)
KEYSCAN_THRESHOLD_MATCH=0.82        # MATCH: â‰¥82% similarity
KEYSCAN_THRESHOLD_POSSIBLE=0.70     # POSSIBLE: 70-81% similarity
KEYSCAN_THRESHOLD_DELTA=0.15        # Margin between matches: 15%

# Weights (calibrated - DTW is primary signal)
KEYSCAN_WEIGHT_BITTING=0.80         # Bitting (DTW + Notches): 80%
KEYSCAN_WEIGHT_EDGE=0.12            # Edge features: 12%
KEYSCAN_WEIGHT_SHAPE=0.08           # Shape features: 8%

# Shape Veto (informative signal, not blocking gate)
KEYSCAN_GATE_HU=0.20                # Hu Moments threshold
KEYSCAN_GATE_HAUSDORFF=150          # Hausdorff distance max
