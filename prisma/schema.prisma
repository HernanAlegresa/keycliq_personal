generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  password            String
  role                Role                 @default(USER)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  passwordResetTokens PasswordResetToken[]
  sessions            Session[]
  keyQueries          KeyQuery[]
  keys                Key[]
  matchings           KeyMatching[]
}

model Session {
  id         String   @id @default(cuid())
  userId     String
  expiration DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Key {
  id            String         @id @default(cuid())
  userId        String
  name          String
  description   String?
  unit          String?
  door          String?
  notes         String?
  imageUrl      String?
  imagePublicId String?
  signature     Json?
  sigStatus     String         @default("pending")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  signatures    KeySignature[]
  matchings     KeyMatching[]
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("keys")
}

model KeySignature {
  id              String    @id @default(cuid())
  keyId           String?
  keyQueryId      String?
  signature       Json
  imageUrl        String?
  confidenceScore Float?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  key             Key?      @relation(fields: [keyId], references: [id], onDelete: Cascade)
  keyQuery        KeyQuery? @relation(fields: [keyQueryId], references: [id], onDelete: Cascade)

  @@map("key_signatures")
}

model KeyQuery {
  id         String         @id @default(cuid())
  userId     String
  queryType  String
  result     Json
  status     String         @default("pending")
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  signatures KeySignature[]
  matchings  KeyMatching[]

  @@map("key_queries")
}

model KeyMatching {
  id              String    @id @default(cuid())
  userId          String
  keyQueryId      String
  matchedKeyId    String?
  matchType       String    // MATCH_FOUND, POSSIBLE_MATCH, NO_MATCH
  similarity      Float
  confidence      Float
  querySignature  Json      // Signature of the scanned key
  matchedSignature Json?    // Signature of the matched key (if any)
  comparisonResult Json?    // Detailed comparison results
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  keyQuery        KeyQuery  @relation(fields: [keyQueryId], references: [id], onDelete: Cascade)
  matchedKey      Key?      @relation(fields: [matchedKeyId], references: [id], onDelete: SetNull)

  @@map("key_matchings")
}

enum Role {
  USER
  ADMIN
}
